<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin tài khoản"
        android:gravity="center"
        android:textSize="35dp"
        android:fontFamily="@font/font_1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Tài khoản:"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginLeft="7dp"
            android:id="@+id/tk_sua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Mật khẩu:"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginLeft="7dp"
            android:id="@+id/mk_sua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Họ tên:"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ten_sua"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Sdt:"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginLeft="7dp"
            android:id="@+id/sdt_sua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Đia chỉ:"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/diachi_sua"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/nam_sua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam" />
            <RadioButton
                android:id="@+id/nu_sua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="8dp"
        android:background="@drawable/khung_sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Năm sinh:"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30/01/2002"
            android:id="@+id/namsinh_sua"
            android:layout_marginLeft="7dp"
            android:textSize="27dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:id="@+id/huy_sua"
            android:background="#ECE2E2"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:id="@+id/luu_sua"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:background="#91D542"
            />
    </LinearLayout>
</LinearLayout>