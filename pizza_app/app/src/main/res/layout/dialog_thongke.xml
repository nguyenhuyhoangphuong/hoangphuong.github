            android:layout_width="50dp"
            android:layout_height="250dp"
            app:progressView_colorBackground="#E3D5D5"
            app:progressView_colorProgress="#4CAF50"
            android:layout_marginTop="5dp"
            app:progressView_min="0"
            app:progressView_max="10000"
            android:id="@+id/pro1"
            app:progressView_orientation="vertical"
            app:progressView_animation="normal"
            />
