<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#45ED4C">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarqlthongke"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:title="Thống kê"
        android:gravity="center"
        app:titleTextColor="#FF5722">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thống kê"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:fontFamily="@font/font_1"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center|left"
        android:background="#F1ACAC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê theo mã sản phẩm:"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_1"
            />
        <Spinner
            android:layout_marginLeft="2dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/masptk"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tính tổng"
            android:id="@+id/chonma"
            />
    </LinearLayout>
    <LinearLayout
        android:background="#F1ACAC"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê theo tháng:"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tính tổng"
            android:layout_marginLeft="20dp"
            android:id="@+id/chonngaythongke"
            />
    </LinearLayout>
</LinearLayout>