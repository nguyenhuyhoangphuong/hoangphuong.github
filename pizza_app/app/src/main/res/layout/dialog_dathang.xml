<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bo_up"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác thực thanh toán"
        android:gravity="center"
        android:fontFamily="@font/font_1"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="7"
        android:background="@color/white">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập mã giảm giá"
            android:id="@+id/ma_giam_gia"
            android:layout_weight="5.5"
            />
        <ImageView
            android:src="@drawable/pizza"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:id="@+id/ap_dung"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin người nhận"
                android:fontFamily="@font/font_1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người nhận: "
                    android:textColor="#FF5722"
                    android:fontFamily="@font/font_1"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/ten_nguoi_nhan"
                    android:fontFamily="@font/font_1"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận: "
                    android:textColor="#FF5722"
                    android:fontFamily="@font/font_1"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/diachi_nhan"
                    android:fontFamily="@font/font_1"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: "
                    android:textColor="#FF5722"
                    android:fontFamily="@font/font_1"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/sdt_nhan"
                    android:fontFamily="@font/font_1"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:padding="3dp"
        android:id="@+id/sanphanmua"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="2"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/tttructipe"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="0dp"
            android:background="@drawable/khung_sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <View
                android:background="@drawable/pay"
                android:layout_width="50dp"
                android:layout_height="40dp"
                />
            <TextView
                android:fontFamily="@font/font_1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ttatm"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/khung_sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <View
                android:background="@drawable/debit_card"
                android:layout_width="60dp"
                android:layout_height="50dp"
                />
            <TextView
                android:fontFamily="@font/font_1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán qua ngân hàng"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Tổng:"
            android:fontFamily="@font/font_1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tong_dathang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5722"
            android:fontFamily="@font/font_1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/xacnhan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/button_dang_nhap_1"
            android:text="Xác nhận"
            android:fontFamily="@font/font_1"
            android:textSize="23dp"
            android:textColor="@color/white" />
    </LinearLayout>
</TableLayout>