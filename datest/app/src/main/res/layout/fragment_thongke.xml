<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home.Tai_khoan.thongke">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_backtk"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/khung_1"
                android:backgroundTint="#D2FF9E"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_path_3391" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Thống kê theo đơn hàng: "
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tkdonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/neonderthaw_regular"
                android:text=" số lượng "
                android:textColor="@color/black"
                android:textSize="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Thống kê theo sản phẩm: "
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tksanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/neonderthaw_regular"
                android:text=" số lượng "
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>
